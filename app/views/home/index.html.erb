<div class="d-flex flex-column flex-md-row justify-content-between align-items-center mt-4">
  <h1 class="page-header me-3">Seja bem-vindo!</h1>
  <%= form_tag root_path, method: :get, class: "d-flex flex-column flex-md-row align-items-center" do %>
    <div class="input-group">
      <%= select_tag :year, options_for_select(@years, params[:year]), class: "form-select me-2 me-md-0", 
            prompt: "Selecione um ano", onchange: "this.form.submit()" %>
    </div>
  <% end %>
</div>

<div class="row gy-4 mt-2">
  <div class="col-lg-3 col-md-6 pe-md-4">
    <div class="card border-primary shadow-sm">
      <div class="card-header bg-primary text-white">
        <div class="d-flex align-items-center">
          <div class="flex-shrink-0">
            <i class="bi bi-person-fill fa-5x"></i>
          </div>
          <div class="flex-grow-1 text-end">
            <div class="h2"><%= @total_players %></div>
            <div>Total de jogadores!</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-3 col-md-6 pe-md-4">
    <div class="card border-success shadow-sm">
      <div class="card-header bg-success text-white">
        <div class="d-flex align-items-center">
          <div class="flex-shrink-0">
            <i class="bi bi-question-circle fa-5x"></i>
          </div>
          <div class="flex-grow-1 text-end">
            <div class="h2"><%= @total_goals %></div>
            <div>Total de gols!</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-3 col-md-6 pe-md-4">
    <div class="card border-warning shadow-sm">
      <div class="card-header bg-warning text-dark">
        <div class="d-flex align-items-center">
          <div class="flex-shrink-0">
            <i class="bi bi-person-lines-fill fa-5x"></i>
          </div>
          <div class="flex-grow-1 text-end">
            <div class="h5"><strong><%= @top_scorer&.first || '-' %></strong></div>
            <div class="text-muted">Total de gols: <strong><%= @top_scorer&.last || '0' %></strong></div>
            <div class="text-success fw-bold">Maior Artilheiro!</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-3 col-md-6 pe-md-4">
    <div class="card border border-info shadow-sm">
      <div class="card-header bg-info text-dark">
        <div class="d-flex align-items-center">
          <div class="flex-shrink-0">
            <i class="bi bi-boxes fa-5x"></i>
          </div>
          <div class="flex-grow-1 text-end">
            <div class="h2"><%= @total_matches %></div>
            <div>Total de partidas!</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-3 col-md-6 pe-md-4">
    <div class="card border border-danger shadow-sm">
      <div class="card-header bg-danger text-white">
        <div class="d-flex align-items-center">
          <div class="flex-shrink-0">
            <i class="bi bi-arrow-down-circle-fill fa-5x"></i>
          </div>
          <div class="flex-grow-1 text-end">
            <div class="h2"><%= @min_score || '0x0'  %></div>
            <div>Menor Placar!</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-3 col-md-6 pe-md-4">
    <div class="card border border-dark shadow-sm">
      <div class="card-header bg-dark text-white">
        <div class="d-flex align-items-center">
          <div class="flex-shrink-0">
            <i class="bi bi-arrow-up-circle-fill fa-5x"></i>
          </div>
          <div class="flex-grow-1 text-end">
            <div class="h2"><%= @max_score || '0x0' %></div>
            <div>Maior Placar!</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
