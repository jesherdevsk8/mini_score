<div class="row">
  <div class="col-lg-12 pt-3">
    <h1 class="page-header">Seja bem-vindo!</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-3 col-md-6">
    <div class="card border-primary">
      <div class="card-header">
        <div class="d-flex align-items-center">
          <div class="flex-shrink-0">
            <i class="bi bi-person-fill fa-5x"></i>
          </div>
          <div class="flex-grow-1 text-end">
            <div class="huge"><%= @total_players || 7656 %></div>
            <div>Total de jogadores no sistema!</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-lg-3 col-md-6">
    <div class="card border-success">
      <div class="card-header">
        <div class="d-flex align-items-center">
          <div class="flex-shrink-0">
            <i class="bi bi-question-circle fa-5x"></i>
          </div>
          <div class="flex-grow-1 text-end">
            <div class="huge"><%= @total_goals %></div>
            <div>Total de gols!</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-3 col-md-6">
    <div class="card border-warning">
      <div class="card-header">
        <div class="d-flex align-items-center">
          <div class="flex-shrink-0">
            <i class="bi bi-person-lines-fill fa-5x"></i>
          </div>
          <div class="flex-grow-1 text-end">
            <div class="huge"><%= @total_players %></div>
            <div>Total de jogadores!</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-3 col-md-6">
    <div class="card border-info">
      <div class="card-header">
        <div class="d-flex align-items-center">
          <div class="flex-shrink-0">
            <i class="bi bi-person-raised-hand fa-5x"></i>
          </div>
          <div class="flex-grow-1 text-end">
            <div class="huge"><%= @total_matches %></div>
            <div>Total de partidas!</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
