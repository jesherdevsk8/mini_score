<% content_for :title, "Editar participação" %>

<% if @participation %>
  <div class="container-fluid mt-4">
    <div class="row">
      <div class="col-md-12">
        <%= flash_message(@participation) %>
        <div class="card shadow-sm w-100">
          <div class="card-header">
            <h4 class="mb-0">Editar Participação</h4>
          </div>
        
          <%= render "form", participation: @participation %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="container-fluid mt-4">
    <p>Partida nao encontrada!</p>
  </div>
<% end %>
