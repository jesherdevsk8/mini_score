<div class="container mt-4">
  <%= flash_message(@participation) %>
  <div class="card">
    <div class="card-header">
      <div class="d-flex justify-content-between align-items-center">
        <% if player.new_record? %>
          <h4 class="mb-0">Adicionar Jogador</h4>
        <% else %>
          <h4 class="mb-0">Editar Jogador</h4>
          <div class="btn-group">
            <%= link_to new_participation_path, class: "btn btn-success" do %>
              <i class="bi bi-person-plus"></i>
            <% end %>
            <%= button_tag "Cadastrar participação", class: "btn btn-outline-dark", disabled: true %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="card-body">
      <%= form_with(model: player, class: "form", local: true) do |form| %>
        <div class="row mb-3">
          <div class="col-md-6">
            <%= form.label :name, "Nome", class: "form-label" %>
            <%= form.text_field :name, class: "form-control", required: true %>
          </div>
          <div class="col-md-6">
            <%= form.label :number, "Número da Camisa", class: "form-label" %>
            <%= form.number_field :number, class: "form-control", required: true, min: 0, step: 1 %>
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :nickname, "Apelido", class: "form-label" %>
          <%= form.text_field :nickname, class: "form-control" %>
        </div>

        <%= form.submit "Salvar Jogador", class: "btn btn-primary btn-sm" %>
      <% end %>
    </div>
  </div>
</div>
