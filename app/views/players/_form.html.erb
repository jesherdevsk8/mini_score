<%= form_with(model: player, class: "form", local: true) do |form| %>
  <% if player.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(player.errors.count, "erro") %> impediram o jogador de ser salvo:</h4>
      <ul>
        <% player.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, "Nome", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :number, "NÃºmero da Camisa", class: "form-label" %>
    <%= form.number_field :number, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :nickname, "Apelido", class: "form-label" %>
    <%= form.text_field :nickname, class: "form-control" %>
  </div>

  <div class="d-grid">
    <%= form.submit "Salvar Jogador", class: "btn btn-primary" %>
  </div>
<% end %>
